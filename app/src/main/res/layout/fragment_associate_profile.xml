<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssociateProfile" android:background="@color/finered"
    android:orientation="vertical"
    android:backgroundTint="@color/whiteblue">

    <View
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="380dp"
        android:layout_height="85dp"
        android:background="@drawable/rectangle_curved"
        android:backgroundTint="@color/darkblue"

        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="730dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/curved_top"

        />
    <ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_marginTop="100dp"
    android:layout_marginStart="105dp"
    android:background="@drawable/associatepicture"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:fontFamily="@font/bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="120dp">

    </TextView>

    <ImageView
        android:id="@+id/asscLogout"
        android:layout_width="13dp"
        android:layout_height="16dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/logoutbtn"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="@color/white"
        android:fontFamily="@font/bolditalic"
        android:layout_marginStart="90dp"
        android:layout_marginTop="350dp"

        />
    <TextView
        android:id="@+id/asscEmailAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:textSize="10sp"
        android:layout_marginTop="355dp"
        android:fontFamily="@font/regular"
        android:text="Account"
        android:maxLines="1"
        android:textColor="@color/white"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name:"
        android:textColor="@color/white"
        android:fontFamily="@font/bolditalic"
        android:layout_marginStart="90dp"
        android:layout_marginTop="380dp"

        />

    <TextView
        android:id="@+id/asscFullname"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="385dp"
        android:fontFamily="@font/regular"
        android:text="Full Name"
        android:textColor="@color/white"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warehouse #"
        android:textColor="@color/white"
        android:fontFamily="@font/bolditalic"
        android:layout_marginStart="90dp"
        android:layout_marginTop="410dp"

        />

    <TextView
        android:id="@+id/asscWarehouseNumber"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="415dp"
        android:fontFamily="@font/regular"
        android:text="Warehouse #"
        android:textColor="@color/white"

        />






</FrameLayout>