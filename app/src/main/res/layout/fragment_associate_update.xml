<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssociateUpdate"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/darkblue">

    <View
        android:layout_width="330dp"
        android:layout_height="140dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rectangle_curved7"

        />
    <View
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_height="300dp"
        android:background="@drawable/rectangle_curved6"

        />

    <ImageView
        android:layout_width="230dp"
        android:layout_marginTop="30dp"
        android:layout_height="230dp"
        android:src="@drawable/qrcode"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:layout_gravity="center"
        android:fontFamily="@font/regular"
        android:textColor="@color/white"
        android:layout_marginBottom="280dp"
        android:textSize="25sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a newly arrived stock from a QR Code"
        android:fontFamily="@font/regular"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="240dp"
        android:textSize="12sp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/scanQrCodeButton"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:background="@drawable/rectangle_curved5"
        android:fontFamily="@font/bold"
        android:onClick="scanQrCode"
        android:text="Scan QR Code"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/scannedQrCodeTextView"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:hint="Scanned QR Code"
        android:inputType="textMultiLine"
        android:layout_marginTop="240dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/regular"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_curved5"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"/>
</FrameLayout>
